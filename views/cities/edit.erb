<h1>Edit --<%= @city.name %>-- </h1>

<form action="/cities" method="post">

  <label for="country">
    Country:
    <select id ="country" name="country_id">
      <% for country in @countries %>
        <% selected_tag = @city.country_id == country.id ? "selected" : "" %>
        <option value="<%=country.id%>" <%= selected_tag %>> <%= country.name %></option>
      <% end %>
    </select>
  </label>

  <br>

  <label for="name">City:</label>
    <input class="btn2" type="text" value="<%=@city.name%>" name="name" id="name">
    <br>

    <label for="visits_to_city">Times I have been here so far:</label>
      <input class="btn2" type="number" value="<%=@city.visits_to_city%>"  name="visits_to_city" id="visits_to_city">

    <input class="btn" type="submit" value="Submit">
</form>
