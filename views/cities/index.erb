<h1>Cities I've Visited</h1>
<a class="click" href="/cities/new">Add City</a>
<hr>
<h2>I have visited</h2>
<% for city in @cities %>
<p>
    <a href="/cities/<%=city.id%>"><%=city.name%> </a> ||
    <% country = city.country %>
    <a href="/countries/<%=country.id%>"><%=country.name %></a>
    </p>
<% end %>
